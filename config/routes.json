{
    "default": {
	"controller" : "\\cms\\controller\\Index",
        "method" : "welcome",
        "app" : "cms"
    },

    "routes" : {
        "/info" : {
            "GET" : {
                "eval" : "phpinfo();"
            }
        },
        "/tkn/{token}" : {
            "GET" : {
                "controller" : "\\cms\\controller\\Base",
                "method" : "runToken",
                "app" : "cms"
            }
        },
        "/signup" : {
            "GET" : {
                "controller" : "\\cms\\controller\\Signup",
                "method" : "showFormSignup",
                "app" : "cms"
            },
            "POST" : {
                "controller" : "\\cms\\controller\\Signup",
                "method" : "performSignup",
                "app" : "cms"
            }
        },
        "/signin" : {
            "GET" : {
                "controller" : "\\cms\\controller\\Index",
                "method" : "showFormSignin",
                "app" : "cms"
            },
            "POST" : {
                "controller" : "\\cms\\controller\\Index",
                "method" : "performSignin",
                "app" : "cms"
            }
        },
        "/forgot_password" : {
            "GET" : {
                "controller" : "\\cms\\controller\\Index",
                "method" : "showFormSendLinkResetPassword",
                "app" : "cms"
            },
            "POST" : {
                "controller" : "\\cms\\controller\\Index",
                "method" : "sendLinkResetPassword",
                "app" : "cms"
            },
            "PUT" : {
                "controller" : "\\cms\\controller\\Index",
                "method" : "performResetPassword",
                "app" : "cms"
            }
        
        }
    }
}